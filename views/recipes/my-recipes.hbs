<div class="container">

    <div class="row">

        <div class="col-md-6">

            {{#each recipes}}
            <div class="card" style="width: 18rem;">

                <h1>My recipes</h1>
                <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}">

                <div class="card-body">
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                </div>

            </div>
            {{/each}}

        </div>

    </div>

</div>